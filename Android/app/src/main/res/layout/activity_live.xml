<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical"
    tools:context=".LiveActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTrip"
        android:background="#F9F9F9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back_edit_genrator"
        android:drawableRight="@drawable/ic_edit_black_24dp"
        android:hint="Starting Point"
        android:inputType="textPersonName"
        android:text="Chennai" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="2 DAYS IN MUMBAI"
        android:textAlignment="center"
        android:textColor="#707070"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:text="11 Oct - 13 Oct"
        android:textAlignment="center"
        android:textSize="15sp" />


    <ListView
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:layout_below="@id/myTrips"
        android:id="@+id/listMyTrips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

</LinearLayout>
