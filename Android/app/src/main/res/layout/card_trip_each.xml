<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="20dp"
        android:background="@drawable/card_back_trips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/timeTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11:30 PM, Today"
            android:layout_marginBottom="5dp"
            android:textColor="#777"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans"

            android:textAlignment="textEnd"/>

        <LinearLayout
            android:layout_below="@id/timeTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="My Mumbai Trip"
                    android:textColor="#545454"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:text="10 Oct - 13 Oct"
                    android:textColor="#545454"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:text="Rs5000"
                    android:textColor="#545454"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/startTrip"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="wrap_content"
                    android:text="Start Trip"
                    android:background="#21BC86"
                    android:textColor="#fff"
                    android:fontFamily="@font/open_sans_semibold"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>